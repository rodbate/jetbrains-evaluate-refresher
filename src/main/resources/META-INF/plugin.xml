<idea-plugin>
    <id>com.github.rodbate.jetbrains-evaluate-refresher</id>
    <name>intellij-evaluate-refresher</name>
    <vendor>rodbate</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.rodbate.jetbrains.evaluate.refresher.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.rodbate.jetbrains.evaluate.refresher.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.rodbate.jetbrains.evaluate.refresher.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
